{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "ES6",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "esModuleInterop": true
    },
    "include": ["./src/**/*"]
}